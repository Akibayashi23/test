<template>
  <v-text-field
    v-model="input"
    label="半角数字とハイフンのみを入力してください"
    @input="validateInput"
  ></v-text-field>
</template>

<script>
export default {
  data() {
    return {
      input: ''
    }
  },
  methods: {
    validateInput() {
      this.input = this.input.replace(/[^\d-]/g, '')
    }
  }
}
</script>
